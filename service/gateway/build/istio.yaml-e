apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: appname
  namespace: default
spec:
  hosts:
    - appname.default.svc.cluster.local
  http:
    - match:
        - port: 8000
      route:
        - destination:
            host: appname.default.svc.cluster.local
            port:
              number: 8000
      timeout: 10s
